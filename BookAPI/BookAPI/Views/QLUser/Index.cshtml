@model IEnumerable<BookAPI.Models.User>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="vh-100 content-wrapper px-2 px-lg-4">
    <h4 class="p-3 ps-lg-0 fs-4 text-light fw-semibold">Quản lý người dùng</h4>

    <div class="w-100 d-flex flex-wrap justify-content-between my-4">
        <div class="d-flex form-search-book mb-4">
            <input type="text" class="flex-1 h-100 form-control form-search-input" id="search-book-input" placeholder="Nhập tên người dùng">
            <button type="button" class="ms-2 btn btn-primary py-0 fw-medium" id="search-book-button">Tìm kiếm</button>
        </div>
    </div>

    <div class="card mb-4 w-100">
        <div class="card-header d-flex flex-wrap justify-content-between align-items-center py-3">
            <div class="mb-3 fs-5 fw-medium opacity-75"><i class="fas fa-table me-3"></i>Danh sách người dùng</div>

            
            <div class="card-body">
                <table id="table-list-books" class="w-100 table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class=""><input type="checkbox" name="table-select-all" id="table-select-all"></th>
                            <th class="col-4">Tên User</th>
                            <th class="col-2">Full Name</th>
                            <th class="col-1 text-center">Email</th>
                            <th class="col-1 text-center">Ngày sinh</th>
                            <th class="col-1 text-center">Giới tính</th>
                            <th class="col-1 text-center">Quyền</th>
                            <th class="col-1 text-center">Trạng thái</th>
                            <th class="col-1 text-center">Chỉnh sửa</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="table-select"></td>
                                <td class="table-title">@item.Username</td>
                                <td class="table-author">@item.FullName</td>
                                <td class="table-categories text-center ">@item.Email</td>
                                <td class="table-publisher text-center ">@item.BirthDate</td>
                                <td class="table-publisheddate text-center ">@item.Gender</td>
                                <td class="table-publisheddate text-center ">@item.Role</td>
                                <td class="table-image text-center ">@item.Status</td>
                                <td>
                                    <div class="w-100 h-100 d-flex justify-content-evenly">
                                        <a href="@Url.Action("EditUser", "QLUser", new {iduser = item.UserID })" class="flex-fill edit-book"><i class="fa-regular fa-pen-to-square"></i></a>
                                        <a href="" class="flex-fill delete-book"><i class="fa-regular fa-trash-can"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>